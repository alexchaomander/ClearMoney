# --- Database (required) ---
# PostgreSQL connection string for async driver
STRATA_DATABASE_URL=postgresql+asyncpg://user:password@host:5432/strata

# --- Encryption (required) ---
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
STRATA_CREDENTIALS_ENCRYPTION_KEY=

# --- Redis (recommended for production) ---
# Used for SnapTrade link session persistence
STRATA_REDIS_URL=redis://redis:6379/0

# --- CORS (required) ---
# Comma-separated list of allowed frontend origins
STRATA_CORS_ALLOW_ORIGINS=https://your-app.vercel.app

# --- SnapTrade (required for brokerage connections) ---
STRATA_SNAPTRADE_CLIENT_ID=
STRATA_SNAPTRADE_CONSUMER_KEY=

# --- Plaid (required for banking connections) ---
STRATA_PLAID_CLIENT_ID=
STRATA_PLAID_SECRET=
STRATA_PLAID_ENVIRONMENT=development

# --- Clerk (required for authentication) ---
STRATA_CLERK_SECRET_KEY=
STRATA_CLERK_PEM_PUBLIC_KEY=

# --- Anthropic (required for AI Advisor) ---
STRATA_ANTHROPIC_API_KEY=

# --- Sentry (optional, error tracking) ---
STRATA_SENTRY_DSN=

# --- Server ---
PORT=8000
WEB_CONCURRENCY=2
