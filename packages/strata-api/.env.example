# --- Database ---
# Use SQLite for quick local dev, PostgreSQL for docker-compose/production
STRATA_DATABASE_URL=sqlite+aiosqlite:///strata.db
# STRATA_DATABASE_URL=postgresql+asyncpg://strata:strata@localhost:5432/strata
STRATA_DATABASE_ECHO=false

# --- Encryption (required) ---
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
STRATA_CREDENTIALS_ENCRYPTION_KEY=

# --- Debug Mode ---
# Enables verbose logging and suppresses PEM key warning
STRATA_DEBUG=true

# --- Redis (optional for local dev) ---
# Used for SnapTrade session persistence. Falls back to in-memory when unset.
STRATA_REDIS_URL=

# --- Sentry (optional, error tracking) ---
STRATA_SENTRY_DSN=

# --- SnapTrade (brokerage connections) ---
# Get these from https://snaptrade.com/developers
STRATA_SNAPTRADE_CLIENT_ID=
STRATA_SNAPTRADE_CONSUMER_KEY=

# --- Plaid (banking connections) ---
# Get these from https://dashboard.plaid.com
STRATA_PLAID_CLIENT_ID=
STRATA_PLAID_SECRET=
STRATA_PLAID_ENVIRONMENT=sandbox

# --- Clerk (authentication) ---
# Get these from https://dashboard.clerk.com
# When PEM key is unset, the API trusts X-Clerk-User-Id header (dev only)
STRATA_CLERK_SECRET_KEY=
STRATA_CLERK_PEM_PUBLIC_KEY=

# --- Anthropic (AI Advisor) ---
STRATA_ANTHROPIC_API_KEY=
